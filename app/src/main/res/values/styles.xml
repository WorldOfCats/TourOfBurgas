<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="actionBarStyle">@style/tourOfBurgas</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tourOfBurgas" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="Categoryes" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/darker_gray</item>
        <item name="tabSelectedTextColor">@android:color/darker_gray</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#000000</item>
    </style>


</resources>
